/*****content nav bar***/
.right-content-nav{
    padding:2px 2px 2px 10px;
         position:fixed;              
            min-height:300px;  
            max-height: 400px;
            width:200px;              
            right:30px;  
            top:30%;  
            right: 15px;
            overflow:auto; 
    border-left: 1px solid #ccc;
    background-color: #fff;
}
@media (max-width: 970px) {
   .right-content-nav{
        top:30%;  
         right: 10px;
        width:150px;      
   }
 
}

#main_content{
    width: 75%;
}
dl dt{
    margin-top:4px!important;
   
}
dl dt a{
    color: #777!important;
    text-decoration: none!important;
}
::-webkit-scrollbar {
		  width: 0px;
}
#up-down{
    position: fixed;
    top:50%;
    right: 50px;
    opacity: 0.0;
    width:1%;
    transition: opacity 0.5s;
    -moz-transition: opacity 0.5s;	/* Firefox 4 */
    -webkit-transition:  opacity 0.5s;	/* Safari 和 Chrome */
    -o-transition:  opacity  0.5s;	/* Opera */

}
#up-down button{
    background: none;
    border-radius: 0px;
}
#up-down #scroll-up:hover{
    background-color: #eee;
}
#up-down #scroll-down:hover{
    background-color: #eee;
}

.right-content-nav:hover #up-down{
     opacity: 1.0;
}
