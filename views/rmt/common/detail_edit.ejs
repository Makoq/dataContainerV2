    <% include ../../include_js.ejs %>
        <script src="/plugins/editor_md/editormd.js"></script>
        <script src="/myjs/datamap_tools.js"></script>

        <script type="text/javascript">
            var testEditor = editormd("test-editormd", {
                width: "90%",
                height: 640,
                markdown: "",
                path: "/plugins/editor_md/lib/",
                //dialogLockScreen : false,   // 设置弹出层对话框不锁屏，全局通用，默认为 true
                //dialogShowMask : false,     // 设置弹出层对话框显示透明遮罩层，全局通用，默认为 true
                //dialogDraggable : false,    // 设置弹出层对话框不可拖动，全局通用，默认为 true
                //dialogMaskOpacity : 0.4,    // 设置透明遮罩层的透明度，全局通用，默认值为 0.1
                //dialogMaskBgColor : "#000", // 设置透明遮罩层的背景颜色，全局通用，默认为 #fff
                imageUpload: true,
                toolbarIcons: "custom",
                imageFormats: ["jpg", "jpeg", "gif", "png", "bmp", "webp"],
                imageUploadURL: "/rmt/common/detail/images?sid=" + GetQueryString('id') + '&type=' + GetQueryString('type') + '&ip=' + GetQueryString('ip')

                /*
                 上传的后台只需要返回一个 JSON 数据，结构如下：
                 {
                    success : 0 | 1,           // 0 表示上传失败，1 表示上传成功
                    message : "提示的信息，上传成功或上传失败及错误信息等。",
                    url     : "图片地址"        // 上传成功时才返回
                 }
                 */
            });

            function init() {
                bindClick();
                loadContent();
            }

            // 保存详情信息到数据库
            function bindClick() {
                $("#save-doc").on("click", function () {
                    // alert(testEditor.getMarkdown());
                    var detail_content = testEditor.getMarkdown();
                    $.post("/rmt/common/detail/save", { sid: GetQueryString('id'), data: detail_content, type: GetQueryString('type'), ip: GetQueryString('ip') }, function (result) {
                        if (result === '-1') {
                            toastr.error('save ' + GetQueryString('type') + ' detail error, you may try again later.', 'Error', { timeOut: 3000 });
                            return;
                        }
                        if (result === "1") {
                            window.location.href = "/rmt/common/detail?id=" + GetQueryString('id') + '&type=' + GetQueryString('type') + '&ip=' + GetQueryString('ip');
                        }
                    });
                })
            }

            // 数据回写到编辑器中（读取数据库）
            function loadContent() {
                $.get("/rmt/common/detailcontent", { sid: GetQueryString('id'), type: GetQueryString('type'), ip: GetQueryString('ip') }, function (result) {
                    $("#test-editormd textarea").text(result);
                });
            }

            $(function () {
                init();
            });
        </script>
</body>

