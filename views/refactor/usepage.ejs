<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">
    <div class="page-wrapper">
        <%include ../header.ejs%>
        <div class="clearfix"> </div>
        <div class="page-container">
            <% include ../sidebar.ejs %>
            <div class="page-content-wrapper">
                <div class="page-content">
                    <% include ../theme_setting.ejs %>
                    <div class="page-bar">
                        <ul class="page-breadcrumb">
                            <li><a href="/">
                                    <i class="fa fa-home" aria-hidden="true"></i>
                                    Home
                                </a>
                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                            </li>
                            <li>
                                <a href="/dp">Service Items</a>
                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                            </li>
                            <li><span>Service Invocation</span></li>
                        </ul>
                    </div>

                    <!-- BEGIN CONTAINER-->
                    <div class="container-fluid" style="padding:0px;margin:0px;min-height:655px">

                        <div class="col-md-12" style="padding:0px;margin-top:20px;margin-bottom:20px;">

                            <div class="panel panel-info">
                                <div class="panel-heading">
                                    <span id="methodName" class="panel-title"></span>
                                    <!--<a href="/refactor/use?id={{=id}}&method={{=methodName}}" class="btn btn-info  pull-right" style="margin-top: -6px;width:100px">调用</a>-->
                                </div>
                                <div class="panel-body">
                                    <p>
                                        <font size="4px">Method Description：</font><span id="methodDesc"></span>
                                    </p>
                                    <!--参数列表-->
                                    <p>
                                        <font size="4px">Paramter List：</font><span id="methodDesc"></span>
                                    </p>

                                    <ul id="myTab" class="nav nav-tabs"></ul>

                                    <div id="myTabContent" class="tab-content"></div>

                                    <!--调用按钮-->
                                    <center style="width:auto;margin-top:10px">
                                        <button style="width:200px" id="btnOK" class="btn btn-success">Invoke</button>
                                        <button style="width:200px" id="btnCancel"
                                            class="btn btn-warning">Cancel</button>
                                    </center>

                                    <!--进度条-->
                                    <p>
                                        <font size="4px">Invoke process：</font><span id="methodDesc"></span>
                                    </p>
                                    <div class="progress progress-striped active" style="margin-top:10px;">
                                        <div id='probar' class="progress-bar progress-bar-success" role="progressbar"
                                            aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
