                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%include ../footer.ejs%>
    </div>


    <% include ../include_js.ejs %>

    <script src="/js/underscore-noflect.js"></script>
    <script src='/myjs/datamap_tools.js'></script>

    <script>
        //选择文件的对话框
        var win;
        //当前方法的参数个数
        var paramCount = 0;

        $(function () {
            // 方法名
            var methodName = GetParamsString(0);
            $('#methodName').html(methodName);

            //获取重构服务中指定方法信息
            $.get('/dp/methods', { 'id': GetParamsString(1) }, function (data) {
                //console.log(data);
                //解析json
                var methodInfo = JSON.parse(data).RefactorMethodInfo;

                var info = undefined;
                var num = 0;
                if (methodInfo.Method instanceof Array) {
                    num = methodInfo.Method.length;
                    info = undefined;
                } else {
                    info = methodInfo.Method;
                    num = 1;
                }

                for (var i = 0; i < num; i++) {
                    info = (info == undefined) ? methodInfo.Method[i] : info;
                    //console.log(info['@name'],info['@class'],info['@description']);
                    var mName = info['@name'];//方法名
                    //找到当前要执行的方法
                    if (mName === methodName) {
                        var methodDescription = info['@description'];
                        $('#methodDesc').html(methodDescription);

                        var params = info['Params'];
                        var trHtml = '';

                        //异步变同步
                        (function iterator(j) {
                            if (j == params.length) {
                                paramCount = j;
                                return;
                            }

                            trHtml = '';
                            var param = params[j];
                            var name = param['@name'];
                            var type = param['@datatype'];//== 'System.String' ? "String" : param['@datatype'];
                            var iotype = param['@type'];//in:输入参数   out:输出参数
                            var description = param['@description'];//参数描述
                            var schema = param['@schema'];//参数对应的Schema


                            if (j === 0) {
                                trHtml += '<li class="active">';
                            } else {
                                trHtml += '<li>'
                            }
                            trHtml += '<a href="#' + name + '" data-toggle="tab">Parameter' + (j + 1) + '</a></li>';
                            $('#myTab').append($(trHtml));


                            trHtml = '';
                            if (j === 0) {
                                trHtml += '<div class="tab-pane fade in active" id="' + name + '">';
                            } else {
                                trHtml += '<div class="tab-pane fade in" id="' + name + '">';
                            }

                            //异步请求param的schema
                            $.get('/dp/paramSchema', { id: GetParamsString(1), schema: schema }, function (udxSchema) {
                                //console.log(udxSchema);
                                // 返回的schema包含一个动态生成的oid。
                                udxSchema = udxSchema.split('[~]')[0].replace(/</g, "&lt;");
                                //布局参数列表
                                trHtml += '<div style="margin-top:10px"><font size="4px">Name: </font>' + name + '</div><br />' +
                                    '<div style="margin-top:0px"><font size="4px">Type:</font>' + type + '</div><br />' +
                                    '<div style="margin-top:0px"><font size="4px">Description:</font>' + description + '</div><br />' +
                                    '<div style="margin-top:0px"><font size="4px">Schema:</font><pre style="width:auto;height:auto;">' + udxSchema + '</pre></div>';

                                //<!--文件选择框-->
                                var parentDiv = $('<div class="input-group">');
                                var txtInput = '';
                                if (iotype === 'in') {
                                    // if (type == 'String')
                                    //     txtInput = $('<input type="text" name="raster-src-file" class="form-control input-args-field" placeholder="Please input the data source" required="required">');
                                    // else
                                    txtInput = $('<input disabled type="text" name="raster-src-file" class="form-control input-args-field" placeholder="Please choose the input file from your filemanager" required="required">');
                                } else {
                                    txtInput = $('<input disabled type="text" name="raster-src-file" class="form-control input-args-field" placeholder="Please choose the output file from your filemanager" required="required">');
                                }
                                txtInput.attr('id', "datapath" + (j + 1));
                                txtInput.attr('iotype', iotype);
                                txtInput.attr('datatype', type);
                                var div = $('<div class="input-group-addon file-choose-btn" id="input-file-btn">');
                                var span1 = $('<span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>');
                                var span2 = $('<span style="padding-left: 5px;cursor:pointer">Choose …</span>');

                                // 如果是输入数据源，则打开数据源列表
                                // if (type == "String") {
                                //     span2.mousedown(function () {
                                //         // 弹出数据源列表
                                //         win = window.open(, 'self-filemanager-dlg-' + (j + 1), 'height=500,width=900,top=100,left=100');
                                //     });
                                // }
                                // else {
                                //     span2.mousedown(function () {
                                //         //打开窗口
                                //         win = window.open('/user/filemanager', 'self-filemanager-dlg-' + (j + 1), 'height=500,width=900,top=100,left=100');
                                //     });
                                // }

                                span2.mousedown(function () {
                                    var url = '/user/filemanager';
                                    if (type == "String") {
                                        url = '/data/serviceselection';
                                    }
                                    //打开窗口
                                    win = window.open(url, 'self-filemanager-dlg-' + (j + 1), 'height=500,width=900,top=100,left=100');
                                });

                                span2.attr('id', "chooseFile" + (j + 1));

                                div.append(span1);
                                div.append(span2);
                                parentDiv.append(txtInput);
                                parentDiv.append(div);

                                trHtml += '</div>';

                                $('#myTabContent').append($(trHtml).append(parentDiv));

                                iterator(j + 1);
                            });

                        })(0);

                        return;
                    }
                    info = undefined;
                }
            });
        });

        //将选择的数据填充到文本框中。
        //data: { parentid: parentid, filename: filename, format: format, oid: oid }
        function fileinput(data) {
            var arr = win.name.split('-');
            if (data.format === 'Folder') {
                toastr.warning('you must choose a file.', 'Warning', { timeOut: 1000 });
                return;
            }

            // 如果是输出数据，在应该选择一个文件夹，而不是一个文件
            if ($('#datapath' + arr[arr.length - 1]).attr('iotype') === 'out') {
                // 如果输出文件目录选择的是普通文件，则无效
                if (data.format === 'Common File') {
                    toastr.warning('the file already exist, you may override it.', 'Warning', { timeOut: 1000 });
                    // return;
                }
            }
            // $('#datapath' + arr[arr.length - 1]).val(data.filename);
            // $('#datapath' + arr[arr.length - 1]).attr('data', JSON.stringify(data));

            // } else { // 输入，必须是文件

            $('#datapath' + arr[arr.length - 1]).val(data.filename);
            $('#datapath' + arr[arr.length - 1]).attr('data', JSON.stringify(data));
            // }
            win.close();
        }

        //执行方法调用
        $('#btnOK').click(function () {
            //循环遍历所有的输入输出数据
            var params = new Array();
            for (var i = 1; i <= paramCount; i++) {
                if ($('#datapath' + i).val().length === 0) {
                    toastr.error('please set the parameter ' + i + '.', 'Error', { timeOut: 1000 });
                    return;
                }

                // data: { parentid: parentid, filename: filename, format: format, oid: oid }
                var dataObj = JSON.parse($('#datapath' + i).attr('data'));

                // 对于控制参数，由于不是从filemanager中选出来的，所以，不是一个json对象。 修正：不考虑这种情况。
                // if ($('#datapath' + i).attr('data') === undefined)
                //     params.push({ 'oid': $('#datapath' + i).val(), 'filename': $('#datapath' + i).val(), pid: '', 'iotype': $('#datapath' + i).attr('iotype'), 'datatype': $('#datapath' + i).attr('datatype') });
                // else

                params.push({ 'oid': dataObj.oid, 'filename': dataObj.filename, 'pid': dataObj.parentid, 'iotype': $('#datapath' + i).attr('iotype'), 'datatype': $('#datapath' + i).attr('datatype') });
            }


            //id，方法名，参数列表(json数组：[{'path':'','iotype':''},{}])
            $.get('/dp/call', { id: GetParamsString(1), method: GetParamsString(0), params: params }, function (guid) {
                // 返回当前运行实例的guid

                // 如果当前的页面不关闭，则拿着这个guid去请求 当前实例的状态，如果完成了，则跳转另一个页面
                setInterval(function () {
                    $.get('/common/instances', { type: 'dp', guid: guid }, function (instance) {
                        // 说明已经执行完毕了
                        if (instance === '') {
                            window.location = '/dp/result?guid=' + guid;
                        }
                    });
                }, 1000);

                $('#probar').css('width', '100%');

            });
        });
    </script>
</body>

</html>