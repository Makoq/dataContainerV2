                 <!-- {{=register}}  -->
                 {{=swith}}
                <span><a class='btn btn-custom-trash' title="Delete" href="javascript:void(0);" onclick='deleteService("{{=_id}}","refactor");' class="btn red"><i class="fa fa-trash-o" aria-hidden="true"></i></a></span>
            </td>
        </tr>
    </script>

